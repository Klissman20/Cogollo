<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/brown</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnSurface">@color/gray</item>
    </style>

    <style name="splashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="textAppearanceActive" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#302343</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/gothamroundedbold</item>
    </style>

</resources>