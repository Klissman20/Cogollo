<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroundgene"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/logo_app"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:src="@drawable/logoo"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:contentDescription="LOGO" />

    <EditText
        android:id="@+id/user_et"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/logo_app"
        android:layout_marginTop="60dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/roundedit_txt"
        android:textColorHint="@color/gray"
        android:hint="Usuario"
        android:textSize="25sp"
        android:textColor="@color/gray"
        android:drawableLeft="@drawable/icon_user"
        android:drawableStart="@drawable/icon_user"
        android:drawablePadding="-50dp"
        android:paddingLeft="20dp"
        android:paddingStart="20dp"/>

    <EditText
        android:id="@+id/pass_et"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/user_et"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/roundedit_txt"
        android:textColorHint="@color/gray"
        android:hint="*******"
        android:textSize="25sp"
        android:textColor="@color/gray"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/icon_pass"
        android:drawableStart="@drawable/icon_pass"
        android:drawablePadding="-50dp"
        android:paddingLeft="20dp"
        android:paddingStart="20dp"/>

    <Button
        android:id="@+id/ingresar_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/pass_et"
        android:background="@drawable/round_btn"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:text="Ingresar"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/forget_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Olvide usuario o contraseÃ±a"
        android:textColor="@color/bg_app"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/ingresar_btn"
        android:layout_marginTop="10dp"/>


    <Button
        android:id="@+id/registro_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ingresar_btn"
        android:background="@drawable/round_btn"
        android:layout_marginTop="90dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:text="Registrarse"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textAllCaps="false"/>

</androidx.constraintlayout.widget.ConstraintLayout>